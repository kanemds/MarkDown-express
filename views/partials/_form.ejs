<div class="form-group">
  <label for="title">Title</label>
  <input type="text"  value="<%= article.title %>" name="title" id="title" class="form-control" required>
</div>
<br>
<div class="form-group">
  <label for="description">Description</label>
  <textarea  required name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>
<br>
<div class="form-group">
  <label for="markdown">Markdown</label>
  <textarea  required name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea>
</div>
<br>
<a href="/markdown/articles" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary btn-dark">Save</button>